    <audio id="bgMusic" src="background.mp3" loop></audio>

    <script>

    	document.getElementById("envelopeContainer").addEventListener("click", openEnvelope);
    	document.getElementById("startSlideshowButton").addEventListener("click", startSlideshow);
    	document.getElementById("prevBtn").addEventListener("click", showPreviousImage);
    	document.getElementById("nextBtn").addEventListener("click", showNextImage);

        function openEnvelope() {
        	console.log("Envelope clicked");
        	document.getElementById("bgMusic").play();

        	const envelopeImage = document.getElementById("envelopeImage");
        	envelopeImage.style.transform = "translateY(-50px) scale(0)";

            setTimeout(() => {
                document.getElementById("envelopeContainer").style.display = "none";
                document.getElementById("letterContainer").style.display = "block";
            }, 500);
        }

        function startSlideshow() {
        	document.getElementById("letterContainer").style.display = "none";
        	document.getElementById("slideshowContainer").style.display = "block";

        	let images = document.querySelectorAll(".slideshow-image");
        	images[currentImageIndex].style.display = "none";
        	currentImageIndex = (currentImageIndex - 1 + images.length) % images.length;
        	images[currentImageIndex].style.display = "block";
        	showNavButtonsTemporarily();
        }

        function showNavButtonsTemporarily() {
        	document.getElementById("prevBtn").style.display = "block";
        	document.getElementById("nextBtn").style.display = "block";

        	clearTimeout(hideButtonsTimeout);
        	hideButtonsTimeout = setTimeout(() => {
        		document.getElementById("prevBtn").style.display ="none";
        		document.getElementById("nextBtn").style.display ="none";
        	}, 3000);
        }

        document.getElementById("slideshowContainer").addEventListener("click", showNavButtonsTemporarily);
    </script>
